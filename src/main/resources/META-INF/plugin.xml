<idea-plugin>
    <id>io.yanxxcloud.editorswitcher</id>
    <name>Smart Editor Switcher</name>
    <vendor email="yanwei@yanxxcloud.cn" url="https://github.com/yanxxcloud">yanxxcloud</vendor>

